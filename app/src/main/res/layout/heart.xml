<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg_heart">

	<ImageView
		android:id="@+id/rr"
		android:layout_width="250dp"
		android:layout_height="250dp"
		android:clickable="true"
		android:contentDescription="rr"
		android:onClick="imageClick"
		android:src="@drawable/heart"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView"
		app:layout_constraintVertical_bias="0.62" />

	<ImageView
		android:id="@+id/rr1"
		android:layout_width="167dp"
		android:layout_height="166dp"
		android:contentDescription="rr1"
		android:src="@drawable/heart1"
		app:layout_constraintBottom_toBottomOf="@+id/rr"
		app:layout_constraintEnd_toEndOf="@+id/rr"
		app:layout_constraintStart_toStartOf="@+id/rr"
		app:layout_constraintTop_toTopOf="@+id/rr" />

	<ImageView
		android:id="@+id/polygon_3"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:clickable="true"
		android:contentDescription="polygon_3"
		android:onClick="back"
		android:src="@drawable/polygon_3"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.01"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.01999998" />

	<TextView
		android:id="@+id/textView"
		android:layout_width="383dp"
		android:layout_height="238dp"
		android:gravity="center"
		android:text="Начать"
		android:fontFamily="@font/fr"
		android:textSize="60sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.22000003" />

	<TextView
		android:id="@+id/text"
		android:layout_width="183dp"
		android:layout_height="37dp"
		android:gravity="center"
		android:text="повторить"
		android:fontFamily="@font/fr"
		android:textSize="24sp"
		android:visibility="invisible"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>